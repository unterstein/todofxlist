<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="CENTER" hgap="10.0" minHeight="400.0" minWidth="600.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml">
  <children>
    <BorderPane GridPane.columnIndex="0" GridPane.rowIndex="0">
      <center>
        <FlowPane alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
          <children>
            <GridPane minHeight="-Infinity" minWidth="-Infinity">
              <children>
                <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField id="username" fx:id="userName" prefWidth="200.0" promptText="Username" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <PasswordField fx:id="password" prefWidth="200.0" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Login" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Button fx:id="login" mnemonicParsing="false" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="3" />
              </children>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
            </GridPane>
          </children>
        </FlowPane>
      </center>
      <top>
        <FlowPane alignment="CENTER" columnHalignment="CENTER">
          <children>
            <Label fx:id="errors" alignment="CENTER" contentDisplay="CENTER" textFill="RED" />
          </children>
        </FlowPane>
      </top>
      <GridPane.margin>
        <Insets />
      </GridPane.margin>
    </BorderPane>
  </children>
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
  </rowConstraints>
</GridPane>
